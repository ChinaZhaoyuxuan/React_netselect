@import "../../common/stylus/mixins.styl"
.register_content
  height 100%
  background-color #fff
  padding 0 40px
  #logoWrap
    width 100%
    height 210px
    text-align center
    display flex
    justify-content center
    font-size 42px
    margin-top 1px
  .regis-title
    margin-top 28px
    display flex
    justify-content center
    span
      font-size 36px
      color #333
  .phone_wrap
    .phone, .codewrap, .pwd, .email, .confirm_pwd
      width 670px
      height 90px
      border-bottom 1px solid #ddd
      margin-top 20px
      clearFix()
      .get_code
        color #333333
        background-color #fff
      input
        float left
        margin 28px 0
        font-size 28px
        color #666
        border 1px solid rgba(0,0,0,0)
        outline none
      button
        float right
        width 168px
        height 58px
        font-size 28px
        color #333
        outline none
        margin 15px 10px 0 0
        background-color $red
        border-radius 10px
        border 1px solid #333
    .register
      width 670px
      height 100px
      font-size 28px
      color #fff
      outline none
      background-color $red
      border 1px solid $red
      margin-top 30px
