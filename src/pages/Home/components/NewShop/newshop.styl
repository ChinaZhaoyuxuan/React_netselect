@import "../../../../common/stylus/mixins.styl"
#popularity
  width 100%
  height 900px
  background-color #fff
  margin-top 25px
  .topTitle
    width 100%
    height 100px
    font-size 35px
    color #333333
    .HotTop
      float left
      padding 30px 0 0 25px
    .more
      float right
      padding 30px 25px 0 0
      text-align center
      font-size 32px
      i
        display block
        font-size 30px
        float right
        margin 5px 5px
  .shopdetails
    display flex
    justify-content space-around
    div
      width 220px
      margin-top 30px
      &:nth-of-type(1)
        float left
        margin-left 10px
      &:nth-of-type(2)
        float left
      &:nth-of-type(3)
        float right
        margin-right 10px
    img
      width 100%
      background-color #f5f5f5
      border-radius 5px
    i
      font-size 26px
      color $red
      padding-left 5px
    span
      width 210px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      display block
      font-size 26px
      color #333333
    .bottomText
      text-align center
      width auto
      color $red
      border 1px solid $red
      border-radius 10px
      padding 3px
      margin 0 auto

#shopKing
  width 100%
  height 680px
  margin-top 30px
  background-color #fff
  div
    width 350px
    height 300px
    background-color #F5F5F5
    p
      font-size 32px
      color #333333
      padding 30px 0 0 30px
    span
      font-size 24px
      color #7f7f7f
      padding 30px 0 0 30px
    &:nth-of-type(1)
      float left
      margin-left 20px
      margin-top 30px
      div
        display flex
        width 200px
        height 150px
        img
          width 100%
    &:nth-of-type(2)
      float right
      margin-right 20px
      margin-top 30px
      div
        display flex
        width 200px
        height 150px
        img
          width 100%
    &:nth-of-type(3)
      float left
      margin-left 20px
      margin-top 10px
      div
        display flex
        width 200px
        height 150px
        img
          width 100%
    &:nth-of-type(4)
      float right
      margin-right 20px
      margin-top 10px
      div
        display flex
        width 200px
        height 150px
        img
          width 100%

.indexFloor
  .banner
    width 100%
    height 420px
    margin-top 30px
    background-image:url(https://yanxuan.nosdn.127.net/3d4838468af4115cac778f2ba6c2f96f.jpg)
    background-size 100% 100%
  .swiperlistContent
    display flex
    .swiperlist
      height 320px
      background-color #fff
      padding 30px 0 0 30px
      display flex
      li
        p
          font-size 24px
          color #333333
          width 220px
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
        .newpice
          color $red
        .oldpice
          color #999
          text-decoration line-through
        .bottomTitle
          border 1px solid #CE2424
          border-radius 10px
          color #CE2424
          padding 2px
          text-align center
          font-size 20px
        .swpic
          width 200px
          height 200px
          background-color #f4f4f4
          img
            width 100%
