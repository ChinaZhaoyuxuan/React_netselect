.scroll_container
  width 100%
  box-sizing border-box
  background-color: #fff
  .name
    margin 0 0 20px 30px
    font-size 36px
    color #333
  .scroll_box
    width 100%
    height 250px
    ul
      height 100%
      float left
      display flex
      >li
        width 250px
        height 250px
        transition 500ms transform
        transform scale(0.7)
        &.active
          transform scale(1)
        >a
          width 100%
          height 100%
          >img
            width 100%
            height 100%
